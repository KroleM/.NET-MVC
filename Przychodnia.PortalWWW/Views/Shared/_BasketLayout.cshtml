<!DOCTYPE html>
<html lang="en">
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1" />
	<title>@ViewData["Title"] - Przychodnia MEDICA</title>

	<!-- CSS  -->
	<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
	<link href="~/lib/materialize/css/materialize.css" type="text/css" rel="stylesheet" media="screen,projection" />
	<link href="~/lib/materialize/css/style.css" type="text/css" rel="stylesheet" media="screen,projection" />
</head>
<body>
	<nav class="cyan" role="navigation">
		<div class="nav-wrapper container">
			<a id="logo-container" href="@Url.Action("MainPage","Home")" class="brand-logo">MEDICA</a>
			<ul class="right hide-on-med-and-down">
				<li>
					@Html.ActionLink("Strona domowa","MainPage","Home")
				</li>
				<li>
					@Html.ActionLink("Rezerwacja wizyty","Index","Reservation")
				</li>
			</ul>

			<ul id="nav-mobile" class="sidenav">
				<li>
					@Html.ActionLink("Strona domowa","MainPage","Home")
				</li>
				<li>
					@Html.ActionLink("Rezerwacja wizyty","Index","Reservation")
				</li>
			</ul>
			<a href="#" data-target="nav-mobile" class="sidenav-trigger"><i class="material-icons">menu</i></a>
		</div>
	</nav>

	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<footer class="page-footer cyan">
		<div class="footer-copyright">
			<div class="container">
				Made by Karol Marciniak &trade;
			</div>
		</div>
	</footer>

	<!--  Scripts-->
	<script src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
	<script src="~/lib/materialize/js/materialize.js"></script>
	<script src="~/lib/materialize/js/init.js"></script>

	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
