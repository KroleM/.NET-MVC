@model IEnumerable<Przychodnia.Database.Data.Visits.Doctor>

@{
    ViewData["Title"] = "Lekarze";
}

<h1>Lekarze</h1>

<p>
    <form method="post">
        <button class="btn btn-primary" asp-action="Create">Utwórz</button>
    </form>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LicenceNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Specialization)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BirthDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhotoURL)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LicenceNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Specialization.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BirthDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhotoURL)
            </td>
            <td>
                @*<a asp-action="Edit" asp-route-id="@item.Id">Edytuj</a>*@
                <form method="post">
                    <button class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edytuj</button>
                </form>
            </td>
            <td>
                <form method="post">
                    <button class="btn btn-warning" asp-action="Details" asp-route-id="@item.Id">Szczegóły</button>
                </form>
            </td>
            <td>
                <form method="post">
                    <button class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Usuń</button>
                </form>
            </td>
        </tr>
}
    </tbody>
</table>
