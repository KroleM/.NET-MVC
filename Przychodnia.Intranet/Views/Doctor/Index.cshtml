@*@model IEnumerable<Przychodnia.Database.Data.Visits.Doctor>*@
@model IEnumerable<Przychodnia.Intranet.ViewModels.DoctorDisplayViewModel>

@{
	ViewData["Title"] = "Lekarze";
}

<h1>Lekarze</h1>

<p>
	<a class="btn btn-success" asp-action="Create">Dodaj</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Picture)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Name)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Address)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.BirthDate)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Price)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.LicenceNumber)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Specialization)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					<img style="height:100px;width:auto;" src="data:@item.PictureFormat;base64,@item.Picture" />
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Name)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Address)
				</td>
				<td>
					@String.Format("{0:d-MM-yyyy}", item.BirthDate)
					@*@Html.DisplayFor(modelItem => item.BirthDate)*@
				</td>
				<td>
					@String.Format("{0:0.}",item.Price) zł
					@*@Html.DisplayFor(modelItem => item.Price)*@
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.LicenceNumber)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Specialization.Name)
				</td>
				<td>
					<a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edytuj</a>
					<a class="btn btn-warning" asp-action="Details" asp-route-id="@item.Id">Szczegóły</a>
					<a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Usuń</a>
				</td>
			</tr>
		}
	</tbody>
</table>
